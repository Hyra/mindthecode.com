mixin post_snippet(post)
  article.index(itemscope, itemtype="http://schema.org/BlogPosting")
    header
      h1(itemprop="headline"): a(href = config.root + post.path)
        span
          = post.title
      p= post.description
      time.post__time(datetime = date_xml(post.date), itemprop="datePublished")
        = '@ ' + date(post.date, theme.date_format)

mixin post(post)
  article.post(itemscope, itemtype="http://schema.org/BlogPosting")
    header
      h1(itemprop="headline")
        span
          = post.title
      h5
        span
          = post.subtitle
      time.post__time(datetime = date_xml(post.date), itemprop="datePublished")
        = date(post.date, theme.date_format)
    hr
    != post.content

    hr

    h2 Questions or comments?
    p As always, if you have any questions or comments, you can find me on <a href="http://twitter.com/hyra"   target="_blank">Twitter</a>.

    hr

    .shares
        a.sbg-button.sbg-button-facebook(data-sbg-network='facebook', data-sbg-url=config.url + config.root + page.path, data-sbg-title=page.title, data-sbg-summary=page.description, data-sbg-image='', data-sbg-width='600', data-sbg-height='368')
          i.sbg-button-icon.fa.fa-facebook
        a.sbg-button.sbg-button-twitter(data-sbg-network='twitter', data-sbg-text=page.description + ' - ' + config.url + config.root + page.path, data-sbg-via='hyra', data-sbg-hashtags='', data-sbg-width='600', data-sbg-height='258')
          i.sbg-button-icon.fa.fa-twitter
        a.sbg-button.sbg-button-linkedin(data-sbg-network='linkedin', data-sbg-url=config.url + config.root + page.path, data-sbg-title=page.title, data-sbg-source='', data-sbg-summary=page.description, data-sbg-width='585', data-sbg-height='471')
          i.sbg-button-icon.fa.fa-linkedin
        a.sbg-button.sbg-button-google-plus(data-sbg-network='google-plus', data-sbg-url=config.url + config.root + page.path, data-sbg-width='500', data-sbg-height='505')
          i.sbg-button-icon.fa.fa-google-plus
        a.sbg-button.sbg-button-pinterest(data-sbg-network='pinterest', data-sbg-url=config.url + config.root + page.path, data-sbg-media='', data-sbg-description=page.description, data-sbg-width='750', data-sbg-height='322')
          i.sbg-button-icon.fa.fa-pinterest

    hr

    h2 Keep reading
    if post.tags && post.tags.length
      ul.tags
        li Tags: 
        -post.tags.forEach(function(tag){
          li.post__tag__item: a.post__tag__link(href = config.root + tag.path)
            = tag.name
        - })

