doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title Mindthecode
    link http://mindthecode.com
    description Rambling about all things web.
    atom:link(href='http://mindthecode.com/rss', rel='self', type='application/rss+xml')
    each post in posts
      - var fullUrl = 'http://mindthecode.com' + post.url
      item
        title= post.title
        link= fullUrl
        description
          | <![CDATA[
          | !{post.preview}
          | ]]>
        pubDate= post.date.toUTCString()
        guid= fullUrl
